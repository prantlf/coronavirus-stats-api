#!/usr/bin/env node

const { synchronizeData } = require('../lib/synchronizer')
const { serveApi } = require('../lib/server')
const { getLastStatement } = require('../lib/database/engine')

synchronizeData()
  .then(() => serveApi())
  .catch(error => {
    const lastStatement = getLastStatement()
    process.stderr.write(`${lastStatement}\n${error.message}\n`)
    process.exit(3)
  })
